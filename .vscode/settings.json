{
    "editor.formatOnSave": true,
    "eslint.format.enable": true,
    "prettier.printWidth": 140,
    "prettier.singleQuote": true,
    "prettier.tabWidth": 1,
    "vetur.format.defaultFormatter.ts": "prettier-tslint",
